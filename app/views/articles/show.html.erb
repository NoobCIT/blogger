<h1><%= @article.title %></h1>
  <p>
    Tags:
    <%= @article.tags.each do |tag| %>
      <%= link_to tag.name, tag_path(tag) %>
    <% end %>
  </p>

  <p>
    <% if @article.image.exists? %>
      <%= image_tag @article.image.url %><br/>
    <% end %>
  </p>

<p><%= @article.body %></p>

<h3>Comments (<%= @article.comments.size %>)</h3>

<% @article.comments.each do |comment| %>
  <div>
    <h4>Comment by <%= comment.author_name %></h4>
    <p class="comment"><%= comment.body %></p>
    <p>Posted <%= distance_of_time_in_words(comment.article.created_at, comment.created_at) %> later</p>
  </div>
<% end %>

<%= render partial: 'comments/form' %>

<%= link_to "<< Back to Articles List", articles_path %>

<% if logged_in? %>
  <%= link_to "edit", edit_article_path(@article) %>
  <%= link_to "delete", article_path(@article), method: :destroy, data: {confirm: "Really delete the article?"} %>
<% end %>
